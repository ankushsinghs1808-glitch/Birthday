background-position:center;
background-repeat:no-repeat;
}

/* Other Pages */
.page4,.page5{
background:
linear-gradient(rgba(0,0,0,0.55), rgba(0,0,0,0.55)),
url("https://image2url.com/r2/default/images/1770956710729-84966257-c152-4e26-9bb2-eb6dc622f05e.png");
background-size: cover;
background-position: center;
background-repeat: no-repeat;
}

/* Cake */
.cake{
position:absolute;
bottom:30px;
left:50%;
transform:translateX(-50%);
width:160px;
animation:bounce 2s infinite;
z-index:1;
}

/* Balloons */
.balloon{
position:absolute;
width:40px;
height:60px;
border-radius:50%;
animation:floatUp 8s linear infinite;
z-index:0;
}
.balloon::after{
content:'';
position:absolute;
width:2px;
height:50px;
background:white;
left:50%;
top:60px;
}

/* Hearts */
.heart{
position:absolute;
font-size:20px;
animation:floatUp 6s linear infinite;
z-index:0;
}

/* Memory Gallery */
.memory-gallery{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(100px,1fr));
gap:15px;
margin-top:15px;
}
.memory-gallery img{
width:100%;
height:120px;
border-radius:20px;
object-fit:cover;
box-shadow:0 0 25px white;
transition:0.6s;
}
.memory-gallery img:hover{
transform:scale(1.2) rotate(5deg);
}

/* Dots */
.dots{
position:absolute;
bottom:20px;
left:50%;
transform:translateX(-50%);
display:flex;
gap:10px;
z-index:3;
}
.dot{
width:12px;
height:12px;
background:white;
border-radius:50%;
opacity:0.5;
transition:0.3s;
}
.dot.active{
opacity:1;
transform:scale(1.2);
}

/* Animations */
@keyframes gradientMove{
0%{background-position:0% 50%;}
50%{background-position:100% 50%;}
100%{background-position:0% 50%;}
}
@keyframes glow{
from{text-shadow:0 0 10px white;}
to{text-shadow:0 0 25px yellow;}
}
@keyframes fadeIn{
from{opacity:0;transform:translateY(30px);}
to{opacity:1;transform:translateY(0);}
}
@keyframes floatUp{
0%{transform:translateY(100vh);opacity:1;}
100%{transform:translateY(-10vh);opacity:0;}
}
@keyframes bounce{
0%,100%{transform:translateX(-50%) translateY(0);}
50%{transform:translateX(-50%) translateY(-20px);}
}
@keyframes pulse{
0%{box-shadow:0 0 15px rgba(255,65,108,0.6);}
50%{box-shadow:0 0 35px rgba(255,75,43,1);}
100%{box-shadow:0 0 15px rgba(255,65,108,0.6);}
}

@media(max-width:600px){
h1{font-size:28px;}
p{font-size:15px;}
.card{padding:25px;}
}
</style>
</head>

