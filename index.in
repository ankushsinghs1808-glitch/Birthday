<style>
*{margin:0;padding:0;box-sizing:border-box;}
body{overflow:hidden;font-family:'Segoe UI',sans-serif;background:black;}

/* Slider */
.slider{
display:flex;
width:500%;
height:100vh;
transition:transform 1s ease-in-out;
}

.page{
width:100vw;
height:100vh;
flex-shrink:0;
display:flex;
justify-content:center;
align-items:center;
position:relative;
overflow:hidden;
color:white;
padding:20px;
}

/* Glass Card */
.card{
max-width:700px;
max-height:80vh;
overflow:auto;
backdrop-filter:blur(20px);
background:rgba(255,255,255,0.15);
padding:40px;
border-radius:25px;
text-align:center;
box-shadow:0 0 50px rgba(255,255,255,0.5);
animation:fadeIn 1.5s ease;
z-index:2;
}

h1{
font-size:42px;
margin-bottom:15px;
animation:glow 2s infinite alternate;
}

p{
font-size:18px;
line-height:1.6;
margin-bottom:25px;
white-space:pre-line;
}

/* Button */
button{
padding:14px 35px;
border:none;
border-radius:40px;
font-size:16px;
cursor:pointer;
background:linear-gradient(45deg,#ff416c,#ff4b2b);
color:white;
font-weight:bold;
letter-spacing:1px;
transition:0.4s;
position:relative;
overflow:hidden;
box-shadow:0 0 20px rgba(255,65,108,0.6);
animation:pulse 1.8s infinite;
}

button:hover{
transform:scale(1.1);
box-shadow:0 0 35px rgba(255,75,43,1);
}

button::before{
content:"";
position:absolute;
top:0;
left:-75%;
width:50%;
height:100%;
background:rgba(255,255,255,0.4);
transform:skewX(-20deg);
transition:0.7s;
}

button:hover::before{
left:130%;
}

/* Birthday Page */
.page1{
background:
linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)),
url("https://image2url.com/r2/default/images/1770918838190-9dda9263-b3cb-482d-a1d0-19c7331cc043.jpg");
background-size:cover;
background-position:center;
background-repeat:no-repeat;
}

/* Page 2 */
.page2{
